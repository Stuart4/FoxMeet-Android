<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">


	<ListView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/eventsView" android:layout_weight="9"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal" android:layout_weight="1">
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="openGroups"
				android:text="Groups"
				android:id="@+id/groupButton" android:layout_gravity="center_horizontal"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="openContacts"
				android:text="Contacts"
				android:id="@+id/contactButton" android:layout_gravity="center_horizontal"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="New Event"
				android:id="@+id/addEventButton" android:layout_gravity="center_horizontal"/>
	</LinearLayout>
</LinearLayout>
